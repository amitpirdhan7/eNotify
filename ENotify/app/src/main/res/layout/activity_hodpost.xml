<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.amitpradhan.enotify.HODPost">

    <Button android:id="@+id/sem1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="1st SEMESTER"
        android:background="#ffe1ffff" >
    </Button>
    <Button android:id="@+id/sem2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="2nd SEMESTER"
        android:layout_below="@+id/sem1"
        android:background="#ffe1ffff" >
    </Button>
    <Button android:id="@+id/sem3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="3rd SEMESTER"
        android:layout_below="@+id/sem2"
        android:background="#ffe1ffff" >
    </Button>
    <Button android:id="@+id/sem4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="4th SEMESTER"
        android:layout_below="@+id/sem3"
        android:background="#ffe1ffff" >
    </Button>
    <Button android:id="@+id/sem5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="5th SEMESTER"
        android:layout_below="@+id/sem4"
        android:background="#ffe1ffff" >
    </Button>
    <Button android:id="@+id/sem6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="6th SEMESTER"
        android:layout_below="@+id/sem5"
        android:background="#ffe1ffff" >
    </Button>
    <Button android:id="@+id/sem7"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="7th SEMESTER"
        android:layout_below="@+id/sem6"
        android:background="#ffe1ffff" >
    </Button>
    <Button android:id="@+id/sem8"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="8th SEMESTER"
        android:layout_below="@+id/sem7"
        android:background="#ffe1ffff" >
    </Button>
    <Button android:id="@+id/prof"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="PROFESSORS"
        android:layout_below="@+id/sem8"
        android:background="#ffe1ffff" >
    </Button>


</RelativeLayout>
</ScrollView>